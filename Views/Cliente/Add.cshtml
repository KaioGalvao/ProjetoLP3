@model ProjetoLp3.Models.Cliente
@{
    ViewData["Title"] = "Cadastrar Cliente";
}
<h1>@ViewData["Title"]</h1>
<p>Utilize o formul√°rio para Cadastrar um Cliente</p>

<form class="form" asp-controller="Computer" asp-action="Add" method="POST">

    <label for="Codigo">Codigo</label>
    <input type="number" id="Codigo" name="Codigo" asp-for="@Model.Codigo">
    <span asp-validation-for="@Model.Codigo" class="text-danger"></span>

    <label for="Nome">Nome</label>
    <input type="text" id="Nome" name="Nome" asp-for="@Model.Nome">
    <span asp-validation-for="@Model.Nome" class="text-danger"></span>

    <label for="Cpf">Cpf</label>
    <input type="text" id="Cpf" name="Cpf" asp-for="@Model.Cpf">
    <span asp-validation-for="@Model.Cpf" class="text-danger"></span>

    <label for="Idade">Idade</label>
    <input type="text" id="Idade" name="Idade" asp-for="@Model.Idade">
    <span asp-validation-for="@Model.Idade" class="text-danger"></span>

    <label for="Endereco">Endereco</label>
    <input type="text" id="Endereco" value="@Model.Endereco" name="Endereco" asp-for="@Model.Endereco">
    <span asp-validation-for="@Model.Endereco" class="text-danger"></span>

    <input class="submit" type="submit" value="Adicionar">
</form>