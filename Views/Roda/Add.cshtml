@model ProjetoLp3.Models.Roda
@{
    ViewData["Title"] = "Cadastrar Roda";
}
<h1>@ViewData["Title"]</h1>
<p>Utilize o formul√°rio para Cadastrar um Roda</p>

<form class="form" asp-controller="Roda" asp-action="Add" method="POST">

    <label for="Codigo">Codigo</label>
    <input type="number" id="Codigo" name="Codigo" asp-for="@Model.Codigo">
    <span asp-validation-for="@Model.Codigo" class="text-danger"></span>

    <label for="Aro">Aro</label>
    <input type="text" id="Aro" name="Aro" asp-for="@Model.Aro">
    <span asp-validation-for="@Model.Aro" class="text-danger"></span>

    <input class="submit" type="submit" value="Adicionar">
</form>