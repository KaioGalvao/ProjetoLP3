@model ProjetoLp3.Models.Roda
@{
    ViewData["Title"] = "Atualizar Roda";
}
<h1>@ViewData["Title"]</h1>

<p>Utilize o formul√°rio para Atualizar a peca</p>

<form class="form" asp-controller="Roda" asp-action="Update" asp-route-id="@Model.Codigo" method="POST">
    
