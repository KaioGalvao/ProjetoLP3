@model IEnumerable<ProjetoLp3.Models.Roda>
@{
    ViewData["Title"] = "Rodas";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum roda cadastrada</p>
    <a class="btn btn-outline-dark" asp-controller="Roda" asp-action="Add">Cadastre uma nova Roda</a>
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Aro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var roda in Model)
            {
                <tr>
                    <td>@roda.Codigo</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Roda" asp-action="Show" asp-route-id="@roda.Codigo">Ver</a>
                        <a class="btn btn-outline-light" asp-controller="Roda" asp-action="Update" asp-route-id="@roda.Codigo">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Roda" asp-action="Delete" asp-route-id="@roda.Codigo">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Roda" asp-action="Add">Cadastre um novo Roda</a>
}
