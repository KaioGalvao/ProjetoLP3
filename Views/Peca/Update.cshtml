@model ProjetoLp3.Models.Peca
@{
    ViewData["Title"] = "Atualizar Peca";
}
<h1>@ViewData["Title"]</h1>

<p>Utilize o formul√°rio para Atualizar a peca</p>

<form class="form" asp-controller="Peca" asp-action="Update" asp-route-id="@Model.Codigo" method="POST">
    
    <label for="Nome">Nome</label>
    <input type="text" id="Nome" value="@Model.Nome" name="Nome" asp-for="@Model.Nome">
